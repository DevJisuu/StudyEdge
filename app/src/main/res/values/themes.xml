<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.StudyEdge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="android:textColorPrimary">@color/on_background</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@color/surface</item>
        
        <!-- Dialog theme -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.StudyEdge.MaterialDialog</item>
        
        <!-- Text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.StudyEdge.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.StudyEdge.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.StudyEdge.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.StudyEdge.Body2</item>
        
        <!-- Shape appearances -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.StudyEdge.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.StudyEdge.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.StudyEdge.LargeComponent</item>
    </style>

    <!-- Dialog Theme Overlay -->
    <style name="ThemeOverlay.StudyEdge.MaterialDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@drawable/bg_dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="windowMinWidthMajor">90%</item>
        <item name="windowMinWidthMinor">90%</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation.StudyEdge</item>
    </style>

    <!-- Dialog Animation -->
    <style name="DialogAnimation.StudyEdge" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="MaterialAlertDialog.StudyEdge.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">@style/TextAppearance.StudyEdge.Headline2</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="MaterialAlertDialog.StudyEdge.Body" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textAppearance">@style/TextAppearance.StudyEdge.Body2</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.StudyEdge.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextAppearance.StudyEdge.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextAppearance.StudyEdge.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextAppearance.StudyEdge.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Shape Styles -->
    <style name="ShapeAppearance.StudyEdge.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.StudyEdge.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.StudyEdge.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- SearchView Style -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">?android:textColorSecondary</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="queryBackground">@null</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="android:maxWidth">10000dp</item>
    </style>
</resources>